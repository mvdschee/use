{
    "$schema": "./node_modules/rome/configuration_schema.json",
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        },
        "ignore": [
            "dist/"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentSize": 4,
        "lineWidth": 120,
        "ignore": [
            "dist/"
        ]
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    }
}